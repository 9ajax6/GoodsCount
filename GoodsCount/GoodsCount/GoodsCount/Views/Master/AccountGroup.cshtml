
@{
    ViewBag.Title = "AccountGroup";
    
}

<h2>AccountGroup</h2>
<script src="~/UtilityJS/GoodsCount.js"></script>
<script src="~/UtilityJS/Entry/AccountGroupCtrl.js"></script>
<div ng-app="utilityApp" ng-controller="AcGroupCtrl">    
    <table class="table">
        <tr ng-repeat="row in data.slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage)) | filter: search">
            <td>{{row.name}}</td>
            <td>{{row.id}}</td>
        </tr>
    </table>
    <pagination total-items="totalItems" ng-model="currentPage" max-size="maxSize" class="pagination-sm"
                boundary-links="true" rotate="false" num-pages="numPages" items-per-page="itemsPerPage"></pagination>
    <pre>Page: {{currentPage}} / {{numPages}}</pre>
</div>
